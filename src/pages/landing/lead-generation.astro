---
import Layout from '~/layouts/LandingLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Demostración de Página de Aterrizaje para Generación de Leads',
};
---

<Layout metadata={metadata}>
  <!-- Componente Hero ******************* -->

  <Hero
    tagline="Demostración de Aterrizaje para Generación de Leads"
    title="Página de Aterrizaje Efectiva para Generación de Leads: Desbloquea los Secretos"
    subtitle="Descubre los secretos para crear una Página de Aterrizaje que convierta a visitantes curiosos en leads entusiastas. (Tu Hero debería captar la atención al instante. Usa un titular potente que hable directamente a tu público objetivo.)"
    actions={[
      { variant: 'primary', text: 'Llamada a la Acción', href: '#', icon: 'tabler:square-rounded-arrow-right' },
      { text: 'Saber más', href: '#' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1597423498219-04418210827d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1674&q=80',
      alt: 'Imán atrayendo tornillos. Demostración de página de aterrizaje para generación de leads',
    }}
  />

  <CallToAction
    title="Próximamente"
    subtitle="Estamos trabajando en el contenido de estas páginas de demostración. Las verás muy pronto. ¡Mantente atento!"
    actions={[
      {
        variant: 'primary',
        text: 'Descargar Plantilla',
        href: 'https://github.com/onwidget/astrowind',
        icon: 'tabler:download',
      },
    ]}
  />
</Layout>
