---
import Layout from '~/layouts/LandingLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Demostración de Página de Aterrizaje de Suscripción',
};
---

<Layout metadata={metadata}>
  <!-- Componente Hero2 ******************* -->

  <Hero2
    tagline="Demostración de Aterrizaje de Suscripción"
    title="Página de Aterrizaje de Suscripción: ¡Convierte Navegantes Ocasionales en Suscriptores Leales!"
    subtitle="Desbloquea la fórmula para una Página de Aterrizaje de Suscripción que haga que tu audiencia regrese por más."
    actions={[
      { variant: 'primary', text: 'Llamada a la Acción', href: '#', icon: 'tabler:square-rounded-arrow-right' },
      { text: 'Saber más', href: '#' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1593510987046-1f8fcfc512a0?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Imagen irónica asociada con la cancelación de una suscripción. Demostración de Página de Aterrizaje de Suscripción',
    }}
  />

  <CallToAction
    title="Próximamente"
    subtitle="Estamos trabajando en el contenido de estas páginas de demostración. Las verás muy pronto. ¡Mantente atento!"
    actions={[
      {
        variant: 'primary',
        text: 'Descargar Plantilla',
        href: 'https://github.com/onwidget/astrowind',
        icon: 'tabler:download',
      },
    ]}
  />
</Layout>
