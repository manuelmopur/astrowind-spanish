---
import Layout from '~/layouts/LandingLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Demostración de Página de Aterrizaje de Ventas',
};
---

<Layout metadata={metadata}>
  <!-- Componente Hero2 ******************* -->

  <Hero2
    tagline="Demostración de Ventas de Formato Largo"
    title="Ventas de Formato Largo: ¡Vende con una Historia: Al Estilo de Formato Largo!"
    subtitle="Sumérgete en la creación de una Página de Aterrizaje que narra, persuade y convierte."
    actions={[
      { variant: 'primary', text: 'Llamada a la Acción', href: '#', icon: 'tabler:square-rounded-arrow-right' },
      { text: 'Saber más', href: '#' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1621452773781-0f992fd1f5cb?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1626&q=80',
      alt: 'Niños contando una historia. Demostración de Página de Aterrizaje de Ventas de Formato Largo',
    }}
  />

  <CallToAction
    title="Próximamente"
    subtitle="Estamos trabajando en el contenido de estas páginas de demostración. Las verás muy pronto. ¡Mantente atento!"
    actions={[
      {
        variant: 'primary',
        text: 'Descargar Plantilla',
        href: 'https://github.com/onwidget/astrowind',
        icon: 'tabler:download',
      },
    ]}
  />
</Layout>
