---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contacto',
};
---

<Layout metadata={metadata}>
  <!-- Componente HeroText ******************* -->

  <HeroText tagline="Contacto" title="¡Conectémonos!" />

  <ContactUs
    id="form"
    title="¡Envíanos un mensaje hoy!"
    subtitle="Para obtener respuestas más rápidas, explora nuestra sección de Preguntas Frecuentes. ¡Quizás encuentres la solución que buscas allí mismo! Si no, nuestro equipo de soporte estará encantado de ayudarte."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nombre',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Correo electrónico',
      },
    ]}
    textarea={{
      label: 'Mensaje',
    }}
    disclaimer={{
      label:
        'Al enviar este formulario de contacto, reconoces y aceptas la recopilación de tu información personal.',
    }}
    description="Nuestro equipo de soporte suele responder en un plazo de 24 horas hábiles."
  />

  <!-- Componente Features2 ************** -->

  <Features2
    title="¡Estamos aquí para ayudar!"
    items={[
      {
        title: 'Soporte general',
        description: `Chatea con nosotros para consultas relacionadas con la gestión de cuentas, navegación del sitio web, problemas de pago, acceso a plantillas compradas o preguntas generales sobre la funcionalidad del sitio web.`,
      },
      {
        title: 'Contactar a ventas',
        description:
          'Chatea con nosotros para preguntas sobre compras, opciones de personalización, licencias para uso comercial, consultas sobre plantillas específicas, etc.',
      },
      {
        title: 'Soporte técnico',
        description:
          'Chatea con nosotros si tienes problemas como la instalación de plantillas, dificultades de edición, problemas de compatibilidad con software o errores de descarga, u otros desafíos técnicos relacionados con el uso de las plantillas.',
      },
      {
        title: 'Teléfono',
        description: '+1 (234) 567-890',
        icon: 'tabler:headset',
      },
      {
        title: 'Correo electrónico',
        description: 'contact@support.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Ubicación',
        description: '1234 Lorem Ipsum St, 12345, Miami, EEUU',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
