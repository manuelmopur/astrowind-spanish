---
import Layout from '~/layouts/LandingLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Página de Aterrizaje de Prelanzamiento',
};
---

<Layout metadata={metadata}>
  <!-- Componente Hero2 ******************* -->

  <Hero2
    tagline="Demostración de Prelanzamiento"
    title="Página de Aterrizaje de Prelanzamiento: ¡Crea Expectación Antes de la Gran Revelación!"
    subtitle="Crea una tentadora Página de Aterrizaje de Próximamente o Prelanzamiento que deje a los visitantes esperando ansiosamente tu lanzamiento."
    actions={[
      { variant: 'primary', text: 'Llamada a la Acción', href: '#', icon: 'tabler:square-rounded-arrow-right' },
      { text: 'Saber más', href: '#' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1558803116-c1b4ac867b31?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2069&q=80',
      alt: 'Tienda con un letrero de Próximamente. Página de Aterrizaje de Prelanzamiento',
    }}
  />

  <CallToAction
    title="Próximamente"
    subtitle="Estamos trabajando en el contenido de estas páginas de demostración. Las verás muy pronto. ¡Mantente atento!"
    actions={[
      {
        variant: 'primary',
        text: 'Descargar Plantilla',
        href: 'https://github.com/onwidget/astrowind',
        icon: 'tabler:download',
      },
    ]}
  />
</Layout>
