---
import Layout from '~/layouts/LandingLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Demostración de Página de Aterrizaje Click-through',
};
---

<Layout metadata={metadata}>
  <!-- Componente Hero2 ******************* -->

  <Hero2
    tagline="Demostración Click-through"
    title="Página de Aterrizaje Click-through: ¡El Puente Perfecto hacia la Conversión!"
    subtitle="Aprende cómo diseñar una Página de Aterrizaje Click-Through que guíe sin problemas a los visitantes a tu oferta principal."
    actions={[
      { variant: 'primary', text: 'Llamada a la Acción', href: '#', icon: 'tabler:square-rounded-arrow-right' },
      { text: 'Saber más', href: '#' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1516321497487-e288fb19713f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Imagen Hero de Página de Aterrizaje Click-through',
    }}
  />

  <CallToAction
    title="Próximamente"
    subtitle="Estamos trabajando en el contenido de estas páginas de demostración. Las verás muy pronto. ¡Mantente atento!"
    actions={[
      {
        variant: 'primary',
        text: 'Descargar Plantilla',
        href: 'https://github.com/onwidget/astrowind',
        icon: 'tabler:download',
      },
    ]}
  />
</Layout>
