---
import Layout from '~/layouts/LandingLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Demostración de Página de Aterrizaje de Detalles del Producto',
};
---

<Layout metadata={metadata}>
  <!-- Componente Hero ******************* -->

  <Hero
    tagline="Demostración de Detalles del Producto"
    title="Página de Aterrizaje de Producto: ¡Muestra con Precisión y Pasión!"
    subtitle="Guía paso a paso para diseñar una Página de Aterrizaje que destaque cada faceta de tu producto o servicio."
    actions={[
      { variant: 'primary', text: 'Llamada a la Acción', href: '#', icon: 'tabler:square-rounded-arrow-right' },
      { text: 'Saber más', href: '#' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1473188588951-666fce8e7c68?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2174&q=80',
      alt: 'Un foco sobre un producto. Demostración de Página de Aterrizaje de Detalles del Producto',
    }}
  />

  <CallToAction
    title="Próximamente"
    subtitle="Estamos trabajando en el contenido de estas páginas de demostración. Las verás muy pronto. ¡Mantente atento!"
    actions={[
      {
        variant: 'primary',
        text: 'Descargar Plantilla',
        href: 'https://github.com/onwidget/astrowind',
        icon: 'tabler:download',
      },
    ]}
  />
</Layout>
