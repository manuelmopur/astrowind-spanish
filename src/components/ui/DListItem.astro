---
// component: DListItem
//
// Imita el elemento HTML 'dl' (lista de descripción).
// El elemento 'dt' es el 'término' y se inserta en una etiqueta 'h6'.
// El desarrollador debe aplicar estilos adecuados a la etiqueta 'h6'.
// Puedes colocar prácticamente cualquier contenido entre las etiquetas
// de apertura y cierre; simplemente estará contenido en un div con un
// margen a la izquierda. No es necesario usar elementos 'dd'.
//
const { dt } = Astro.props;
interface Props {
  dt: string;
}

const content: string = await Astro.slots.render('default');
---

<h6 set:html={dt} />
<div class="dd ml-8" set:html={content} />
